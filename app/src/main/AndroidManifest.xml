        <activity android:name="rdm.randomize.randomapp.AlphabetGenerator" />
        <activity android:name="rdm.randomize.randomapp.MonthGeneratro" />
        <activity android:name="rdm.randomize.randomapp.DayGenerator" />
        <activity android:name="rdm.randomize.randomapp.NumberGenerator" />
        <activity android:name="rdm.randomize.randomapp.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
